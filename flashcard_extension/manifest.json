{
  "manifest_version": 2,
  "name": "Japanese Flashcard Saver",
  "version": "1.0",
  "description": "Highlight Japanese text and save as flashcards for study.",
  "permissions": [
    "contextMenus",
    "storage",
    "activeTab",
    "tabs",
    "https://jisho.org/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popups/popup.html",
    "default_title": "Flashcards"
  },
  "web_accessible_resources": [
    "print.html"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
